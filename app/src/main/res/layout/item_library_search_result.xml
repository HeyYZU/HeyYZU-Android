<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:elevation="0dp">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <ImageView
            android:id="@+id/img_book_cover"
            android:layout_width="80dp"
            android:layout_height="115dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_empty_box"
            android:scaleType="centerInside"/>
        <TextView
            android:id="@+id/tv_book_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/img_book_cover"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/colorBlack87"
            android:textSize="16sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/tv_book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_book_title"
            app:layout_constraintLeft_toRightOf="@id/img_book_cover"
            android:textColor="@color/colorBlack54"
            android:textSize="14sp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/tv_book_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_book_author"
            app:layout_constraintLeft_toRightOf="@id/img_book_cover"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:layout_marginStart="10dp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>