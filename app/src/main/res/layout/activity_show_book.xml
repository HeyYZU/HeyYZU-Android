<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.NoActionBar.AppBarOverlay"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:layout_scrollFlags="enterAlways|snap"
            app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:visibility="gone"
        android:id="@+id/view_book"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:paddingBottom="16dp"
            >
            <android.support.v7.widget.CardView
                android:id="@+id/view_book_cover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                android:elevation="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp">
                <ImageView
                    android:id="@+id/img_book_cover"
                    android:layout_width="85dp"
                    android:layout_height="115dp"
                    android:src="@drawable/ic_empty_box"
                    android:scaleType="centerInside"
                    android:layout_margin="8dp"/>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/tv_book_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/colorBlack87"
                app:layout_constraintLeft_toRightOf="@+id/view_book_cover"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/txt_book_isbn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="80dp"
                app:layout_constraintLeft_toRightOf="@+id/view_book_cover"
                app:layout_constraintTop_toBottomOf="@+id/tv_book_title"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="@string/txt_library_book_isbn"/>

            <TextView
                android:id="@+id/tv_book_isbn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_book_title"
                app:layout_constraintLeft_toRightOf="@+id/txt_book_isbn"
                android:textSize="14sp"
                android:textColor="@color/colorBlack54"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/txt_book_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="80dp"
                app:layout_constraintLeft_toRightOf="@+id/view_book_cover"
                app:layout_constraintTop_toBottomOf="@+id/txt_book_isbn"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="@string/txt_library_book_index"/>

            <TextView
                android:id="@+id/tv_book_index"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_book_isbn"
                app:layout_constraintLeft_toRightOf="@+id/txt_book_index"
                android:textSize="14sp"
                android:textColor="@color/colorBlack54"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/txt_book_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="80dp"
                app:layout_constraintLeft_toRightOf="@+id/view_book_cover"
                app:layout_constraintTop_toBottomOf="@+id/tv_book_index"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="@string/txt_library_book_author"/>

            <TextView
                android:id="@+id/tv_book_author"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_book_index"
                app:layout_constraintLeft_toRightOf="@+id/txt_book_author"
                android:textSize="14sp"
                android:textColor="@color/colorBlack54"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="12dp"/>

            <TextView
                android:id="@+id/txt_book_publisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="80dp"
                app:layout_constraintLeft_toRightOf="@+id/view_book_cover"
                app:layout_constraintTop_toBottomOf="@+id/tv_book_author"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="@string/txt_library_book_publisher"/>

            <TextView
                android:id="@+id/tv_book_publisher"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_book_author"
                app:layout_constraintLeft_toRightOf="@+id/txt_book_author"
                android:textSize="14sp"
                android:textColor="@color/colorBlack54"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/txt_book_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="80dp"
                app:layout_constraintLeft_toRightOf="@+id/view_book_cover"
                app:layout_constraintTop_toBottomOf="@+id/tv_book_publisher"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="@string/txt_library_book_year"/>

            <TextView
                android:id="@+id/tv_book_year"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_book_publisher"
                app:layout_constraintLeft_toRightOf="@+id/txt_book_year"
                android:textSize="14sp"
                android:textColor="@color/colorBlack54"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="12dp"/>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_book_year"
                android:layout_marginTop="25dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:scrollbars="none" />
            </android.support.v7.widget.CardView>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <include
        android:visibility="gone"
        layout="@layout/view_connect_error"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <include
        android:visibility="gone"
        layout="@layout/view_server_error"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/colorPrimary"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/view_search_none"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/img_not_found"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_search_none"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="48dp"
            />
        <TextView
            android:id="@+id/txt_not_found"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            style="@style/CourseInfoTitle"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_not_found"
            android:text="@string/txt_library_no_entity_book"
            android:textSize="16sp"
            android:gravity="center"
            />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>