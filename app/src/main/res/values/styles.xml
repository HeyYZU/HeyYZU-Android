<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorStatusBar</item>
    </style>

    <style name="AppTheme.NoActionBar.ShowBook" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="LoginEditText">
        <item name="android:drawablePadding">5dp</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="LoginButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/rectangle_hollow_round_8</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DialogTitle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="DialogTitle.Error">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="DialogMessage">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DialogButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="Navigation">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Navigation.HeaderUsername">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Navigation.HeaderDepartment">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="Navigation.MenuItem" parent="Navigation">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CourseInfoTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorBlack54</item>
    </style>

    <style name="CourseInfoDescription">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorBlack87</item>
    </style>

    <style name="HomeworkDeadlineCountdown">
        <item name="android:background">@drawable/rectangle_hollow_round_3</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Library" />
    <style name="Library.Dashboard">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Library.Dashboard.Title">
        <item name="android:textColor">@color/colorBlack87</item>
    </style>

    <style name="Library.Dashboard.Button" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
